{# Formulario editar segundo banner #}
{% extends "projectAdminloginBundle:layers:basePrincipal.html.twig" %}
{% block title %}Editar Banner{% endblock %}
{% block padre %}<a href="{{path('listarSegundoBanner')}}">Listar Segundo Banner</a>{% endblock %}
{% block hijo %} Editar Banner {%endblock%}
{% block contenido %}
<div class="container well well-sm">
    <form action="{{path('guardarEditarSegundoBanner')}}" method="POST" class="form-horizontal" rol="form">
        <input name="id" type="hidden" class="form-control" value="{{segundobanner.id}}">
        <!-- Nombre  -->
        <div class="form-group">
            <label for="nombre" class="col-sm-2 control-label">
                Nombre del banner:
            </label>
            <div class="col-sm-10">
                <input name="nombre" type="text" id="nombre" class="form-control" value="{{segundobanner.nombre}}">
            </div>
        </div>
        <!-- Nombre  -->
        <!-- select idioma -->
        <div class="form-group">
            <label for="idioma" class="col-sm-2 control-label">
                Idioma:
            </label>
            <div class="col-sm-10">
                <select name="idioma" id="idioma" class="form-control">
                    <option>Opción</option>
                    {% if segundobanner.idioma == "ingles" %}
                    <option value="ingles" selected>Ingles</option>
                    <option value="español">Español</option>
                    {% elseif segundobanner.idioma == "español" %}
                    <option value="ingles" >Ingles</option>
                    <option value="español" selected>Español</option>
                    {% endif %}
                </select>
            </div>
        </div>
        <!-- select idioma -->  
        <!-- Nombre  -->
        <div class="form-group">
            <label for="link" class="col-sm-2 control-label">
                Link:
            </label>
            <div class="col-sm-10">
                <input name="link" type="text" id="nombre" class="form-control" value="{{segundobanner.link}}">
            </div>
        </div>
        <!-- Boton submit -->
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Guarda Cambios Banner</button>
                <a href="{{path('vistaUploadSegundoBanner')}}">Cambiar imagen</a>
            </div>
        </div>
        <!-- Boton submit -->
    </form>
</div>
{% endblock %}
