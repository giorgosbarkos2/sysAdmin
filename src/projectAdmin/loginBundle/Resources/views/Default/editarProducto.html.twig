{% block titulo %} Editar Productos {%endblock %}
{% block contenido %}
<div class="container well well-sm">
    <form action="{{path('guardarEditarProducto')}}" method="POST" class="form-horizontal" rol="form">
        <div class="form-group">
            <input name="id" type="hidden" id="id" class="form-control" value="{{producto.id}}">
             <label for="nombre" class="col-sm-2 control-label">
                Categorias:
            </label>
            <div class="col-sm-10">
                 <select id="categoria" name="categoria"  class="form-control">
                    <option>Opcion</option>
                    <option value="{{producto.categoria.id}}" selected>{{producto.categoria.nombre}}</option>
                </select>
            </div>
           <div style="width: 10px;height: 50px;position:relative;"></div>
            <label for="nombre" class="col-sm-2 control-label">
                Nombre:
            </label>
            <div class="col-sm-10">
                <input name="nombre" type="text" id="nombre" class="form-control" value="{{producto.nombre}}">
            </div>
        </div>
        <!-- select idioma -->
        <div class="form-group">
            <label for="idioma" class="col-sm-2 control-label">
                Idioma:
            </label>
            <div class="col-sm-10">
                <select name="idioma" id="idioma" class="form-control">
                    {% if producto.idioma == '' %}
                    <option value="ingles">Ingles</option>
                    <option value="español">Español</option>
                    {% else %} 
                    
                    <option value="{{producto.idioma}}"> {{producto.idioma}} </option>
                    
                    
                    {% endif %}
                    
                </select>
            </div>
        </div>
        <!-- select idioma -->                    
      
      
        <div class="form-group">
            <label for="caracteristicauno" class="col-sm-2 control-label">
                Caracteristica Uno:
            </label>
            <div class="col-sm-10">
                <input name="caracteristicauno" type="text" id="caracteristicauno" class="form-control" value="{{producto.caracteristicasuno}}">
            </div>
        </div>
        <div class="form-group">
            <label for="caracteristicados" class="col-sm-2 control-label">
                Caracteristica Dos:
            </label>
            <div class="col-sm-10">
                <input name="caracteristicados" type="text" id="caracteristicados" class="form-control" value="{{producto.caracteristicasdos}}">
            </div>
        </div>
      
        
 
        
        
        
   
        <div class="form-group">
            <label for="descripcion" class="col-sm-2 control-label">
                Descripcion:
            </label>
            <div class="col-sm-10">
                <textarea name="descripcion" id="descripcion" cols="30" rows="10" class="form-control">{{producto.descripcion}}</textarea>
            </div>
        </div>
        
        
     
            <label for="fotos" class="col-sm-2 control-label">
                Fotos:
            </label>
            <table class="table" style="width:60%;margin-left:1%;" >
                {% set foto = producto.foto %}
                <tbody>
                        <tr>
                    {% for foto in foto %}
                
                        <td width="20%">
                            <img src="../../productos/{{producto.id}}/{{foto.url}}" alt="{{foto.url}}" width="100" height="100" >
                          
                            <a href="{{path('eliminarFotoProducto', {'id': foto.id})}}" class="btn btn-danger">Eliminar</a>
                        </td>
                 
                    {% endfor %}
                           </tr>
                </tbody>
            </table>
        </div>
        
       <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
              <a  target="_blank"class="btn btn-default" href="{{path('uploadImagen')}}">Agregar Mas  fotos</a> 
            <button type="submit" class="btn btn-default">Guardar Cambios </button>
          </div>
       </div>
    </form>
</div>
{% endblock%}
