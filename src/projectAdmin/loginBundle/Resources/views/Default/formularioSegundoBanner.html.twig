{# Formulario agregar segundo banner #}
{% extends "projectAdminloginBundle:layers:basePrincipal.html.twig" %}
{% block title %}Agregar Banner{% endblock %}
{% block padre %}<a href="{{path('listarSegundoBanner')}}">Listar Segundo Banner</a>{% endblock %}
{% block hijo %} Agregar Banner {%endblock%}
{% block contenido %}
<div class="container well well-sm">
    <form action="{{path('guardarFormularioSegundoBanner')}}" method="POST" class="form-horizontal" rol="form">
        <!-- Nombre  -->
        <div class="form-group">
            <label for="nombre" class="col-sm-2 control-label">
                Nombre del banner:
            </label>
            <div class="col-sm-10">
                <input name="nombre" type="text" id="nombre" class="form-control">
            </div>
        </div>
        <!-- Nombre  -->
        <!-- select idioma -->
        <div class="form-group">
            <label for="idioma" class="col-sm-2 control-label">
                Idioma:
            </label>
            <div class="col-sm-10">
                <select name="idioma" id="idioma" class="form-control">
                    <option>Opción</option>
                    <option value="ingles">Ingles</option>
                    <option value="español">Español</option>
                </select>
            </div>
        </div>
        <!-- select idioma -->  
        <!-- link  -->
        <div class="form-group">
            <label for="link" class="col-sm-2 control-label">
                Link:
            </label>
            <div class="col-sm-10">
                <input name="link" type="text" id="link" class="form-control">
            </div>
        </div>
        <!-- link  -->
        <!-- Boton submit -->
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Cargar Banner</button>
            </div>
        </div>
        <!-- Boton submit -->
    </form>
</div>
{% endblock %}
