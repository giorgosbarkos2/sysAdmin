{############################################################################## 
    Plantilla que contiene el fomulario para ingresar articulos
    al sitio peregrin.
###############################################################################}
{% extends "projectAdminloginBundle:layers:basePrincipal.html.twig" %}
{% block title%} Agregar Art&iacute;culo {% endblock%}
{% block padre %}<a href="{{path('listarArticulos')}}">Listar Art&iacute;culo</a>{% endblock %}
{% block hijo %} Agregar Art&iacute;culo {%endblock%}
{% block titulo %} Agregar Art&iacute;culo {%endblock %}
{% block contenido %}
<div class="container">
    <form action="{{path('guardarFormularioArticulo')}}" method="POST" class="form-horizontal" role="form">
           <!-- Ingresar Titulo -->
           <div class="form-group">
               <label for="titulo" class="col-sm-2 control-label">
                   T&iacute;tulo:
               </label>
               <div class="col-sm-10">
                   <input name="titulo" type="text" id="titulo" class="form-control">
               </div>
           </div>
           <!-- Ingresar Titulo -->
           <!-- Seleccionar Idioma -->
           <div class="form-group">
               <label for="idioma" class="col-sm-2 control-label">
                   Idioma:
               </label>
               <div class="col-sm-10">
                   <select name="idioma" id="idioma" class="form-control">
                       <option value="">Seleccione un Idioma</option>
                       <option value="ingles">Ingles</option>
                       <option value="español">Español</option>
                   </select>
               </div>
           </div>
           <!-- Seleccionar Idioma -->
           <!-- Ingresar una descripcion corta -->
           <div class="form-group">
               <label for="descripcioncorta" class="col-sm-2 control-label">
                   Descripci&oacute;n Corta:
               </label>
               <div class="col-sm-10">
                   <input name="descripcioncorta" type="text" id="descripcioncorta" class="form-control">
               </div>
           </div>
           <!-- Ingresar una descripcion corta -->
           <!-- Ingresar articulo -->
           <div class="form-group">
               <label for="articulo" class="col-sm-2 control-label">
                   Art&iacute;culo:
               </label>
               <div class="col-sm-10">
                   <textarea name="articulo" id="" cols="30" rows="10" class="form-control"></textarea>
               </div>
           </div>
           <!-- Ingresar articulo -->
           <!-- Boton Guardar -->
           <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Guardar Art&iacute;culo</button>
                </div>
           </div>
           <!-- Boton Guardar -->
    </form>
</div>
{% endblock %}