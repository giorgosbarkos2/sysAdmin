             {% set contador = contador +1 %}
             {% if contador <= 1 %}
             
             <img class="p-photo" src="../../productos/{{producto.id}}/{{foto.url}}" data-large="../../productos/{{producto.id}}/{{foto.url}}" alt="{{producto.nombre}}" width="295" height="373"    /> </div>
             {% endif %}
             {% endfor %}
              
              
              
              <div class="thumb-gallery">
            
            
             
            
          <div id="carousel-gallery">
             
              
           
                {% set tumb = producto.foto %}
           
                {% for tumb in tumb %}
               
           
              
                          <div class="item">     <img data-tmb-large="../../productos/{{producto.id}}/{{tumb.url}}" data-medium="../../productos/{{producto.id}}/{{tumb.url}}" src="../../productos/{{producto.id}}/{{tumb.url}}" alt="Producct 21" width="77" height="74" />           </div>
                        
              
            
              {% endfor %}
  
          </div>
            
            
            
            
           
            
