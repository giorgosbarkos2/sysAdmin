            <li> <a href="#"><span id="textoProductos">PRODUCTOS</span></a>
              <div class="dropdown-menu">
                <ul class="dropdown">
                  {% for categoria in categoria %}
                        
                      <li><a href="../../home/productos/{{categoria.id}}" title="{{categoria.nombre}}">{{categoria.nombre}}</a></li>
                  {% endfor %}
                </ul>
              </div>
            </li>
