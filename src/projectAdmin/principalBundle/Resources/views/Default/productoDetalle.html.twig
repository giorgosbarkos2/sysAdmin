    <div class="bst-seller-list">
      <div class="bst-seller-thumb"> 
          
          {% set foto = productoAsoc.foto %}
          {% set cont = 0 %}
          {% for foto in foto %}
          {% set cont = cont + 1 %}
          {% if cont <= 1 %}
          
      <img src="../../productos/{{productoAsoc.id}}/{{foto.url}}" alt="{{productoAsoc.nombre}}" width="77" height="74" /> 
          {% endif %}
      {% endfor %}
      
      </div>
            
            
      <div class="bst-seller-content">
     <div class="bst-seller-title">
            
            <a href="#" title="turtle neck">  {{ productoAsoc.nombre }}</a></div>
              
              
        <div class="bst-seller-price">{{ productoAsoc.caracteristicasdos }}</div>
        
        <div class="bst-seller-cart"></div>
      </div>
      <div class="clearing"></div>
    </div>
    <div class="bst-seller-list">
  
   
  </div>
</div>
  
  
  {% endif %}
