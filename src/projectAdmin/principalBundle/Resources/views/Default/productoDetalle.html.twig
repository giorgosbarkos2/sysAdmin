  <div class="product-detail-description-sub">{{producto.caracteristicasuno}}</div>
  <div class="product-detail-description-sub"><span id="txtMaterial">Material telas: </span>  {{producto.caracteristicasdos}}</div>
  <br><br>

  <div class="product-detail-description"><b><span id="txtdescripcion">Descripción</span></b><br>
                                                    {{producto.descripcion}}
			</div>
          <div class="product-detail-description"></div>
         
			<div class="clearing"></div>

			

			

		
